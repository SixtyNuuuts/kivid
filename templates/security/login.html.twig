{% extends 'base.html.twig' %}

{% block title %}Connexion Kivid{% endblock %}

{% block body %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <h1>Veuillez vous connecter</h1>

    {{ form_start(loginForm) }}
        {{ form_row(loginForm.email) }}
        {{ form_row(loginForm.password) }}
        {# {{ form_row(loginForm.rememberMe) }} #}
        {# https://symfony.com/doc/current/security/remember_me.html #}
        <a href="{{ path('app_forgot_password_request') }}">mot de passe oubli√©</a>

        <br><a href="{{ path('app_oauth_connect', {service: 'google'}) }}"> Se connecter avec Google</a>
        <br><a href="{{ path('app_oauth_connect', {service: 'facebook'}) }}">Se connecter avec Facebook</a>

        <br><button type="submit" class="btn">S'identifier</button>
    {{ form_end(loginForm) }}
{% endblock %}
