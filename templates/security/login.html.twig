{% extends 'base.html.twig' %}

{% block title %}Connexion Kivid{% endblock %}

{% block body %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <h1>Veuillez vous connecter</h1>

    {{ form_start(loginForm) }}
        {{ form_row(loginForm.email) }}
        {{ form_row(loginForm.password) }}
        {# {{ form_row(loginForm.rememberMe) }} #}
        {# https://symfony.com/doc/current/security/remember_me.html #}
        <a href="{{ path('app_forgot_password_request') }}">mot de passe oublié</a>

        <br><button type="submit" class="btn">S'identifier</button>
    {{ form_end(loginForm) }}

    <br><a href="{{ path('app_oauth_connect', {userType: 'patient', service: 'google'}) }}">Se connecter avec Google - En tant que patient</a>
    <br><a href="{{ path('app_oauth_connect', {userType: 'doctor', service: 'google'}) }}">Se connecter avec Google - En tant que kiné</a>
    <br>
    <br><a href="{{ path('app_oauth_connect', {userType: 'patient', service: 'facebook'}) }}">Se connecter avec Facebook - En tant que patient</a>
    <br><a href="{{ path('app_oauth_connect', {userType: 'doctor', service: 'facebook'}) }}">Se connecter avec Facebook - En tant que kiné</a>
{% endblock %}
