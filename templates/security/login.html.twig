{% extends 'base.html.twig' %}

{% block title %}Connexion Kivid{% endblock %}

{% block body %}
    {% include 'partial/_flash.html.twig' %}

    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div>
            Vous êtes connecté en tant que {{ app.user.username }}, <a href="{{ path('app_logout') }}">Se déconnecter</a>
        </div>
    {% endif %}

    <h1>Veuillez vous connecter</h1>

    {{ form_start(loginForm) }}
        {{ form_row(loginForm.email) }}
        {{ form_row(loginForm.password) }}
        {# {{ form_row(loginForm.rememberMe) }} #}
        {# https://symfony.com/doc/current/security/remember_me.html #}

        <button type="submit" class="btn">S'identifier</button>
    {{ form_end(loginForm) }}
{% endblock %}
