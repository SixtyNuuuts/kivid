            {{ encore_entry_link_tags('app') }}
        {% endblock %}
        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body data-app class="{% block body_class %}{% endblock %}">
        {% block layout %}{% endblock %}
    </body>
</html>
