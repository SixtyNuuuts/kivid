{% extends 'layout/vue.html.twig' %}

{% block title %}Tableaux de bord{% endblock %}

{% block stylesheets %}
	{{ parent() }}

	{{ encore_entry_link_tags('doctor-dashboard-page') }}
{% endblock %}

{% block javascripts %}
	{{ parent() }}

	{{ encore_entry_script_tags('doctor-dashboard-page') }}
{% endblock %}

{% block body %}
	<div id="vue"></div>
{% endblock %}
{% block vueData %}
	{
		"doctor": {{ doctor|serialize('json', {'groups': 'doctor_read'})|raw }},
		"csrfTokenAddPatient": {{ csrf_token('add_patient' ~ doctor.id)|serialize('json')|raw }},
		"csrfTokenRemovePatient": {{ csrf_token('remove_patient' ~ doctor.id)|serialize('json')|raw }},
		"csrfTokenRemoveWorksheet": {{ csrf_token('remove_worksheet' ~ doctor.id)|serialize('json')|raw }},
		"csrfTokenCreatePatient": {{ csrf_token('create_patient' ~ doctor.id)|serialize('json')|raw }}
	}
{% endblock %}
