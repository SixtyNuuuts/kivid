{% extends 'layout/vue.html.twig' %}

{% block title %}Mes Fiches{% endblock %}

{% block stylesheets %}
    {{ parent() }}

	{{ encore_entry_link_tags('my-worksheets-page') }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}

	{{ encore_entry_script_tags('my-worksheets-page') }}
{% endblock %}

{% block body %}
	{% include 'layout/partial/_breadcrumb.html.twig' with { pageName : 'Mes Fiches'} %}
    
	<div class="container my-8">
		<h1><i class="fe fe-file-text"></i>Mes Fiches</h1>

		<div id="vue"></div>
	</div>
{% endblock %}

{% block vueData %}
	{
		"doctor": {{ doctor|serialize('json', {'groups': 'doctor_read'})|raw }},
		"doctorPrescriptions": {{ doctorPrescriptions|serialize('json', {'groups': 'worksheet_read'})|raw }}
	}
{% endblock %}
