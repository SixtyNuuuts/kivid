{% extends 'layout/vue.html.twig' %}

{% block title %}Mes Patients{% endblock %}

{% block stylesheets %}
    {{ parent() }}

	{{ encore_entry_link_tags('doctor-my-patients-page') }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}

	{{ encore_entry_script_tags('doctor-my-patients-page') }}
{% endblock %}

{% block body %}	
	<div class="container my-8">
		<h1><i class="fe fe-users"></i>Mes Patients</h1>

		<div id="vue"></div>
	</div>
{% endblock %}

{% block vueData %}
	{
		"doctor": {{ doctor|serialize('json', {'groups': 'doctor_read'})|raw }},
		"trigger": {{ trigger|serialize('json')|raw }},
		"csrfTokenAddPatient": {{ csrf_token('add_patient' ~ doctor.id)|serialize('json')|raw }},
		"csrfTokenRemovePatient": {{ csrf_token('remove_patient' ~ doctor.id)|serialize('json')|raw }},
		"csrfTokenCreatePatient": {{ csrf_token('create_patient' ~ doctor.id)|serialize('json')|raw }}
	}
{% endblock %}
